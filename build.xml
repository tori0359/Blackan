<?xml version="1.0" ?>

<project basedir="." name="web09" default="deploy">
	<property name="src" location="src"/>
	<property name="build" location="build"/>
	<property name="dest" location="${build}\classes"/>
	<property name="dist" location="dist"/>
	
	<target name="clean">
		<delete dir="${build}"/>
	</target>
	
	<target name="init">
		
		<mkdir dir="${build}\classes"/>
		
		<copy todir="${build}">
			<fileset dir="WebContent"></fileset>
		</copy>
		<tstamp>
			<format property="DSTAMP" pattern="yyyy-MM-dd"/>
		</tstamp>
	</target>
	
	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${dest}" encoding="euc-kr"/>
	</target>
	
	<target name="dist" depends="compile">
		<mkdir dir="dist"/>
		
		<jar destfile="${dist}\${ant.project.name}_${DSTAMP}.jar" basedir="${build}"/>
	</target>
	
	<target  name="deploy" depends="dist">
		<war needxmlfile="false" destfile="../../../Tomcat 7.0/webapps/${ant.project.name}_${DSTAMP}.war" basedir="${build}" />
	</target>
	

</project>